
@model List<Game>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Game</h6>
        <a class="btn btn-primary" asp-controller="Game" asp-action="Create">Yarat</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Cost price</th>
                        <th>Sell price</th>
                        <th>Quantity</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td><img src="~/imgs/products/@item.CoverImg" width="70" /></td>
                            <td>@item.Title</td>
                            <td>@item.CostPrice</td>
                            <td>@item.SellPrice</td>
                            <td>@item.Quantity</td>
                            <td><a class="btn btn-success" asp-controller="Game" asp-action="Update" asp-route-id="@item.Id">Dəyiş</a></td>
                            <td><a class="btn btn-danger" asp-controller="Game" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



